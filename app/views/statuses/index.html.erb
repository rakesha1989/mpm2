<p id="notice"><%= notice %></p>

<h1>Listing Statuses</h1>

<table class="table table-bordered", id="myTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= link_to status do %><span class= "glyphicon glyphicon-eye-open"></span><% end %>|
            <%= link_to edit_status_path(status) do %><span class= "glyphicon glyphicon-pencil"></span>
                            <% end %>|
            <%= link_to status, method: :delete, data: { confirm: 'Are you sure?' } do %><span class= "glyphicon glyphicon-trash"></span><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>


            
             


