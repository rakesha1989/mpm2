<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<table class="table table-bordered", id="myTable">
  <thead>
    <tr>
      <th>Suffix</th>
      <th>Name</th>
      <th>Sector</th>
      <th>Cin no</th>
      <th>Pan no</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.suffix %></td>
        <td><%= company.name %></td>
        <td><%= company.sector %></td>
        <td><%= company.cin_no %></td>
        <td><%= company.pan_no %></td>
        <td><%= link_to company do %><span class= "glyphicon glyphicon-eye-open"></span><% end %>|
            <%= link_to edit_company_path(company) do %><span class= "glyphicon glyphicon-pencil"></span>
                            <% end %>|
             <%= link_to company, method: :delete, data: { confirm: 'Are you sure?' } do %><span class= "glyphicon glyphicon-trash"></span><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>



            
          

<br>
<%= button_to "New Company", new_company_path , :class => "btn btn-primary", :method => :get %>

