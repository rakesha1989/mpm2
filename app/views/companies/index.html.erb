<h1>Listing Companies</h1>

<table id="myTable">
  <thead>
    <tr>
      <th>Suffix</th>
      <th>Name</th>
      <th>Sector</th>
      <th>Cin no</th>
      <th>Pan no</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.suffix %></td>
        <td><%= company.name %></td>
        <td><%= company.sector %></td>
        <td><%= company.cin_no %></td>
        <td><%= company.pan_no %></td>
        <td><%= link_to 'Show', company %>
            <%= link_to 'Edit', edit_company_path(company) %>
            <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

