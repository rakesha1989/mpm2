<%= form_for(@plan) do |f| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
      <% @plan.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :status_id %><br>
    <%= f.collection_select :status_id, Status.all, :id, :name, prompt: "Select Status" %>
  </div>
  <div class="field">
    <%= f.label :meeting_id %><br>
    <%= f.collection_select :meeting_id, Meeting.all, :id, :plan_month, discard_day: true,  prompt: "Select plan month" %>
  </div>
  <div class="field">
    <%= f.label :priority_id %><br>
    <%= f.collection_select :priority_id, Priority.all, :id, :name, prompt: "Select Priority" %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.select :rating, %w[1 2 3 4 5] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
