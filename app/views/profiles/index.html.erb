<p id="notice"><%= notice %></p>

<%if(@profile == nil)%>
  <h3>No Profile</h3>
      <%= button_to "New Profile", new_profile_path, :class => "btn btn-primary", :method => :get %>
<%else%>
    <% if current_user.role? "director" %>
    <h1>Listing Profiles</h1>
<table class="table table-bordered", id="myTable">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>D o b</th>
      <th>Designation</th>
      <th>Gender</th>
      <th>mobile</th>
      <th>email</th>
      <th>Skill</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.d_o_b %></td>
        <td><%= profile.designation %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.mobile %></td>
        <td><%= profile.email %></td>
        <td><%= profile.skill %></td>
        <td><%= link_to profile do %><span class= "glyphicon glyphicon-eye-open"></span><% end %>|
            <%= link_to edit_profile_path(profile) do %><span class= "glyphicon glyphicon-pencil"></span>
                            <% end %>|
            <%= link_to profile, method: :delete, data: { confirm: 'Are you sure?' } do %><span class= "glyphicon glyphicon-trash"></span><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
     <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Profile Details</h3>
  </div>
<div class="panel-body">

<p>
  <strong>First name:</strong>
  <%= @profile.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @profile.last_name %>
</p>

<p>
  <strong>D o b:</strong>
  <%= @profile.d_o_b %>
</p>

<p>
  <strong>Designation:</strong>
  <%= @profile.designation %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @profile.gender %>
</p>

<p>
  <strong>Skill:</strong>
  <%= @profile.skill %>
</p>

<p>
  <strong>Email:</strong>
  <%= @profile.email %>
</p>

<p>
  <strong>Mobile:</strong>
  <%= @profile.mobile %>
</p>

<a class="btn btn-primary" href="<%=edit_profile_path(@profile)%>" role="button" style="color:white">Edit</a>


</div>
</div>


<%end%>
<% end %>
                            



