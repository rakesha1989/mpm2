<!DOCTYPE html>
<html>
<head>
  <title>Mpm2</title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
 	<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

 	<!-- Bootstap css-->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<!-- datatables css-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.10/css/jquery.dataTables.min.css">
<!-- fullcalender css-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.5.0/fullcalendar.min.css">

<!-- bootstrap js-->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<!-- datatables js-->
<script src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
<!-- full calender js-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.5.0/fullcalendar.min.js"></script>

    <%= csrf_meta_tags %>
</head>
<body>	
<div class="container">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">MPM</a>
    </div>
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
  <ul class="nav navbar-nav">	
				<% if user_signed_in? %>

						
						<li><%= link_to "Plans", plans_path %> </li>
						<li><%= link_to "Profile", profiles_path %> </li>
						<li><%= link_to "Assignment", assignments_path %>  </li>
						<li><%= link_to 'Home', root_path %> </li>
						<li>
						<% if can? :create, Meeting.new %>
							<%= link_to "Meeting", meetings_path %> 
						<% end %> </li>
						<li>
						<% if can? :create, Company.new %>
							<%= link_to "Company", companies_path %> 
						<% end %> </li>
						<li>
						<% if can? :create, Status.new %>
							<%= link_to "Status", statuses_path %> 
						<% end %> </li>
						<li>
						<% if can? :create, Activity.new %>
							<%= link_to "Activity", activities_path %> 
						<% end %> </li>
						<li>
						<% if can? :create, Priority.new %>
							<%= link_to "Priority", priorities_path %> 
						<% end %> </li>
						<li>
						<% if can? :create, Category.new %>
							<%= link_to "Category", categories_path %> 
						<% end %> </li>
						<li>
							<%= link_to "sign_out", destroy_user_session_path, :method => 'delete' %> </li>
					
					<% end %>
</ul>
</div>
</div>
</nav>
</div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="container">

<%= yield %>
</div>
</body>
</html>
